<article class="post-card {{post_class}}{{#unless feature_image}} no-image{{/unless}}">
    <div class="columns">
        <div class="column post-card-content">
            {{!-- <div class=""> --}}
                <a class="post-card-content-link" href="{{url}}">
                    <header class="post-card-header">  
                        <h2 class="post-card-title is-size-3">{{title}}</h2>
                    </header>
                </a>
                 {{#if published_at}}
                    <span class="post-card-date">
                        {{date published_at format="MMMM DD, YYYY"}}
                    </span>
                {{/if}}
                <section class="post-card-excerpt">
                    <p>{{excerpt words="33"}}</p>
                </section>
                
                <footer class="post-card-meta">
                    <a class="button is-outlined read-more" href="{{url}}">CONTINUE READING</a>
                    
                    
                    {{#if primary_tag}}
                        <span class="post-card-tags">{{primary_tag.name}}</span>
                    {{/if}}
                </footer>
            {{!-- </div> --}}
        </div>
        <div class="column is-one-quarter post-image-container">
            {{#if feature_image}}
                <a class="post-card-image-link" href="{{url}}">
                    <div class="post-card-image" style="background-image: url({{feature_image}})"></div>
                </a>
            {{/if}}
        </div>
    </div>
</article>

   
