{{!< default}}
{{!-- The tag above means: insert everything in this file
into the {body} of the default.hbs template --}}

{{!-- The big featured header, it uses blog cover image as a BG if available --}}



<div class="site-container">
  <div class="nav-area" {{#if @blog.cover_image}} style="background-image: url({{@blog.cover_image}})"{{/if}} >
    <div class="container is-fluid">
        <header class="site-header outer">
            <div class="inner">
                <div class="site-header-content">
                    <h1 class="site-title is-size-1">
                        {{#if @blog.logo}}
                            <img class="site-logo" src="{{@blog.logo}}" alt="{{@blog.title}}" />
                        {{else}}
                            {{@blog.title}}
                        {{/if}}
                    </h1>
                    {{!-- <h2 class="site-description">{{@blog.description}}</h2> --}}
                </div>
                {{!--> "site-nav"--}}
            </div>
        </header>
    </div>

  </div>
  <div class="content-area">
    {{!-- <div class="container is-fluid"> --}}
        {{!-- The main content area --}}
        <main id="site-main" class="site-main outer" role="main">
            {{!-- <div class="inner"> --}}

                <div class="post-feed">
                    {{#foreach posts}}

                        {{!-- The tag below includes the markup for each post - partials/post-card.hbs --}}
                        {{> "post-card"}}

                    {{/foreach}}
                </div>

            {{!-- </div> --}}
        </main>
    {{!-- </div> --}}
  </div>
  
</div>